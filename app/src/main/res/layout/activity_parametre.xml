<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFAF0">

    <!-- Titre principal "Paramètres" en haut -->
    <TextView
        android:id="@+id/main_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Paramètres"
        android:textSize="24sp"
        android:textColor="#D6336C"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Guideline pour alignement vertical en % -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline75"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75" />

    <!-- Texte "Télécharger la carte" (normal, pas en gras) -->
    <TextView
        android:id="@+id/Dl_map"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Télécharger la carte"
        android:textSize="16sp"
        android:textColor="#D6336C"
        android:fontFamily="casual"
        android:layout_marginTop="16dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/main_title"
        app:layout_constraintStart_toStartOf="@id/guideline25"
        app:layout_constraintEnd_toEndOf="@id/guideline75" />

    <!-- Bouton 1 -->
    <Button
        android:id="@+id/button2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Lancer"
        android:backgroundTint="#FFD966"
        android:textColor="#000000"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/Dl_map"
        app:layout_constraintStart_toStartOf="@id/guideline25"
        app:layout_constraintEnd_toEndOf="@id/guideline75"
        app:layout_constraintDimensionRatio="4:1" />

    <!-- Texte synchro Firebase -->
    <TextView
        android:id="@+id/Synch_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Synchronisation Firebase scratched"
        android:textSize="16sp"
        android:textColor="#FF4081"
        android:fontFamily="casual"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/button2"
        app:layout_constraintStart_toStartOf="@id/guideline25"
        app:layout_constraintEnd_toEndOf="@id/guideline75" />

    <!-- Bouton 2 -->
    <Button
        android:id="@+id/button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Synchroniser"
        android:backgroundTint="#FFD966"
        android:textColor="#000000"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/Synch_button"
        app:layout_constraintStart_toStartOf="@id/guideline25"
        app:layout_constraintEnd_toEndOf="@id/guideline75"
        app:layout_constraintDimensionRatio="4:1" />

    <!-- Autre synchro -->
    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Synchroniser Discoveries"
        android:textColor="#FF4081"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:fontFamily="casual"
        app:layout_constraintTop_toBottomOf="@id/button"
        app:layout_constraintStart_toStartOf="@id/guideline25"
        app:layout_constraintEnd_toEndOf="@id/guideline75" />

    <!-- Bouton 3 -->
    <Button
        android:id="@+id/button4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Synchroniser"
        android:backgroundTint="#FFD966"
        android:textColor="#000000"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/textView2"
        app:layout_constraintStart_toStartOf="@id/guideline25"
        app:layout_constraintEnd_toEndOf="@id/guideline75"
        app:layout_constraintDimensionRatio="4:1" />

    <!-- Texte : Passage au mode en ligne -->
    <TextView
        android:id="@+id/text_online_mode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Connexion au mode en ligne"
        android:textColor="#FF4081"
        android:textSize="16sp"
        android:gravity="center"
        android:fontFamily="casual"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/button4"
        app:layout_constraintStart_toStartOf="@id/guideline25"
        app:layout_constraintEnd_toEndOf="@id/guideline75" />

    <!-- Bouton : Passer au mode en ligne -->
    <Button
        android:id="@+id/button_online_mode"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Passer au mode en ligne"
        android:backgroundTint="#FFD966"
        android:textColor="#000000"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/text_online_mode"
        app:layout_constraintStart_toStartOf="@id/guideline25"
        app:layout_constraintEnd_toEndOf="@id/guideline75"
        app:layout_constraintDimensionRatio="4:1" />

    <!-- Switch shaders (avec changement couleur du thumb quand on clique) -->
    <Switch
        android:id="@+id/Switch_shader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="#FFF2CC"
        android:text="Shaders"
        android:textColor="#303030"
        android:textSize="14sp"
        android:thumbTint="@color/switch_color"
        android:trackTint="#FFC0CB"
        app:layout_constraintTop_toBottomOf="@id/button_online_mode"
        app:layout_constraintStart_toStartOf="@id/guideline25"
        app:layout_constraintEnd_toEndOf="@id/guideline75"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="UseSwitchCompatOrMaterialXml,TouchTargetSizeCheck" />

    <!-- ComposeView placé en dernier pour être au-dessus de tout -->
    <androidx.compose.ui.platform.ComposeView
        android:id="@+id/composeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="50dp"
        android:elevation="20dp"
        android:translationZ="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
